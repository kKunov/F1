each team in teams
    .row
        .col-md-8.col-md-offset-2
            .row.table-color
                .col-md-2.col-md-offset-1.col-sm-4
                        img.img-thumbnail.pic-border(src=team.pic)
                        h5.text-center= team.name

                .col-md-3.col-md-offset-1.col-sm-2
                    h2= team.engine

                each driver in team.drivers
                    .col-md-2.col-sm-3
                        img.img-thumbnail(src=driver.pic)
                        h6.text-center= driver.name
